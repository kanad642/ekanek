<h1>Documents</h1>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Attachment</th>
      <th>Public</th>
      <th>File path</th>
      <th colspan="2" >Action</th>

    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.attachment %></td>
        <td><%= document.public %></td>
        <td><%= document.file_path %></td>
        <td><%= link_to 'Edit', edit_document_path(document), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path, class: "btn btn-info" %>
